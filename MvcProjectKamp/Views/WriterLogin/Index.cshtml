@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}

<!doctype html>
<html lang="en"> 
<head>
    <title>Yazar Girişi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/WriterLogin/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/WriterLogin/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @if (ViewBag.Error == null)
                        {
                            <h3 class="mb-4 text-center">Hesabınız var mı?</h3>
                        }
                        else
                        {
                            <h3 class="mb-4 text-center">@ViewBag.Error</h3>
                        }
                        @using (Html.BeginForm("Index", "WriterLogin", FormMethod.Post))
                        {

                            <div class="form-group">
                                @Html.TextBoxFor(w => w.WriterEmail, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(w => w.WriterEmail)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(w => w.WriterPassword, new { placeholder = "Parola", @class = "form-control", @id = "password-field" })
                                @Html.ValidationMessageFor(w => w.WriterPassword)
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla!
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Parolamı Unuttum</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/WriterLogin/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/WriterLogin/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/WriterLogin/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/WriterLogin/js/main.js"></script>

</body>
</html>

