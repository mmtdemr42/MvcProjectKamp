@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hakkımızda</h2>

<table class="table table-striped table-bordered">
    <tr class="text-center">
        <th>Hakkımızda Detay-1 </th>
        <th>Hakkımızda Detay-2 </th>
        <th>Hakkımızda Görsel-1 </th>
        <th>Hakkımızda Görsel-2 </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">Herhangi bir bilgi bulunamadı.</td>
        </tr>
    }
    else
    {
        foreach (var about in Model)
        {
            <tr class="text-center">
                <td class="text-left">@about.AboutDetails1</td>
                <td class="text-left">@about.AboutDetails2</td>
                <td><img style="height:100px;" alt="Avatar" class="table-avatar" src="@about.AboutImage1"></td>
                <td><img style="height:100px;" alt="Avatar" class="table-avatar" src="@about.AboutImage2"></td>
            </tr>
        }
    }
</table>

@Html.Action("AboutAdd", "AdminAbout")