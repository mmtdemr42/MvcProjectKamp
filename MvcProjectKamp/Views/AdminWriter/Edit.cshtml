@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Bİlgileri Güncelleme</h2>

@using (Html.BeginForm("Edit", "AdminWriter", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(w => w.WriterID)
    <div class="form-group">
        @Html.Label("Yazar Unvanı")
        @Html.TextBoxFor(w => w.WriterTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterTitle, null, new { @class="text-danger"})
        <br />
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(w => w.WriterName, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterName, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(w => w.WriterSurname, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterSurname, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Email")
        @Html.TextBoxFor(w => w.WriterEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterEmail, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Parola")
        @Html.TextBoxFor(w => w.WriterPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterPassword, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Resim Linki")
        @Html.TextBoxFor(w => w.WriterImage, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.TextBoxFor(w => w.WriterAbout, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterAbout, null, new { @class = "text-danger" })
        <br /><br />
        <button type="submit" class="btn btn-success">
            Güncelle
        </button>
    </div>
}
